.button {
	background:
		linear-gradient(0deg, rgba(0, 0, 0, 0.075), rgba(255, 255, 255, 0.075)),
		brandcolor;
	color:white;
	font-weight:900;
	border:none
	padding:0.7em 1.2em;
	text-decoration:none;
	box-shadow:
		0 2px 10px -1px rgba(0, 0, 0, 0.3);
	border-bottom:2px solid rgba(0, 0, 0, 0.2);

	&:active {
		box-shadow:
			inset 0 0 0.5em rgba(0, 0, 0, 0.25),
			inset 0 0 100px rgba(0, 0, 0, 0.2);
		color:rgba(255, 255, 255, 0.6);
		outline:none;
	}
}

.warning-button {
	@extend .button;
	
	background:
		linear-gradient(0deg, rgba(0, 0, 0, 0.1), rgba(255, 255, 255, 0.1)),
		#DB4159;
}