.site-nav {
	display:block;
	line-height:header_height
	border-left:1px solid uicolor;
	margin-left:1em;
	margin-right:-1.5em;
	float:right;
	word-spacing:0.1em;
	
	&__list,
	&__item {
		float:left;
		padding:0;
		margin:0;
		list-style:none;
	}
	
	&__item {
		position:relative;
	}

	&__link,
	&__button {
		background:none;
		border:none;
		color:rgba(0, 0, 0, 0.6);
		display:block;
		text-decoration:none;
		padding:0 1em;
		border-right:1px solid rgba(0, 0, 0, 0.1);
		vertical-align:middle
		transition:all 0.15s ease;
		line-height:inherit;
		
		&:hover {
			background:
				linear-gradient(0deg, rgba(0, 0, 0, 0.075), rgba(255, 255, 255, 0.075)),
				brandcolor;
			color:white;
			box-shadow:
				inset 0 -2px 1px rgba(0, 0, 0, 0.2),
				0 2px 10px -1px rgba(0, 0, 0, 0.2);

			img {
				filter:invert(1);
			}
		}
		
		&:active,
		&.open {
			background:
				linear-gradient(0deg, rgba(0, 0, 0, 0.1), rgba(255, 255, 255, 0.1)),
				darken(brandcolor, 10);
			color:rgba(255, 255, 255, 0.7);
			box-shadow:
				inset 0 2px 8px -1px rgba(0, 0, 0, 0.2),
				inset 0 1px 40px rgba(0, 0, 0, 0.1);
			transition:none;

			img {
				filter:invert(1);
				opacity:0.33;
				transition:none;
			}
		}
	}
	
	img {
		height:1em;
		vertical-align:middle;
		opacity:0.5;
		margin-top:-0.1em;
		margin-left:0.8em;
		transition:filter 0.2s ease;
	}
	
	.welcome {
		display:none;
	}
	
	.current-user {
		font-weight:900;
	}
	
	&__dropdown {
		position:absolute;
		right:0;
	}
	
	+bp(1) {
		margin-right:0;
		
		&__link,
		&__button {
			padding:0 1.5em;
		}
		
		.welcome {
			display:inline;
		}
	}
}