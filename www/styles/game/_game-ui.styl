.game-wrapper {
	display: flex;
    flex: 1;
    flex-direction: column;
}

.game-ui {
	padding:4em 0;
	display:flex;
	flex:1;
    flex-direction: column;
    position:relative;
    align-items: center;
	    justify-content: center;
}

.response-prompt {
	font-size:2em;
	text-align:center;
	font-family:fancy-font-family;
	font-weight:lighter;
	margin-top: 1em;
	margin-bottom:2em;
	
	&__prompt {
		color:brandcolor;
		font-weight:900;
	}
	
	&__title {
		margin-bottom:0.7em;
	}

	&__input {
		background-color:white;
		box-shadow:0 0.1em 0.4em -0.1em rgba(0, 0, 0, 0.2);
		border:3px solid white;
		text-align:center;
		border-radius:4px;
		width:100%;
		margin:0;
		transition:
			border-color 0.2s ease,
			box-shadow 0.2s ease;
		
		&:focus {
			border-color:brandcolor;
			border-bottom-color:darken(brandcolor, 15);
			border-top-color:lighten(brandcolor, 10);
			box-shadow:0 0.3em 0.5em -0.2em rgba(0, 0, 0, 0.3);
			outline:none;
		}
	}
	
	form {
		margin-bottom:0;
	}

}

@keyframes ellipsis-bob {
	85% {
		transform:translateY(0.4em) scaleY(1);
	}

	100% {
		transform:translateY(0.5em) scaleY(0.6);
		margin:0 0.14em;
		border-bottom-width:0.1em;
		background-color:saturate(brandcolor, 50);
	}
}

.player-choosing {
	@extend .response-prompt;
	
	&__ellipsis-dot {
		box-sizing:border-box;
		display:inline-block;
		height:0.5em;
		width:0.5em;
		margin:0 0.25em;
		border-radius:50%;
		background-color:darken(uicolor, 30);
		border-bottom:0 solid rgba(0, 0, 0, 0.3);
		animation:ellipsis-bob 0.4s cubic-bezier(.6,0,1,1) alternate infinite;
		
		for num in (1..3) {
			&:nth-child({num}) {
				animation-delay:num*-0.12s;
			}
		}
	}
}

.next-player-info {
	font-size:1.4em;
	font-family:fancy-font-family;
	opacity:0.7;
}