.site-nav {
	display:block;
	line-height:header_height
	border-left:1px solid uicolor;
	margin-left:1em;
	margin-right:-1.5em;
	float:right;
	
	ul, li {
		float:left;
		list-style:none;
		margin:0;
		padding:0;
		display:block;
	}

	a {
		color:rgba(0, 0, 0, 0.6);
		display:block;
		text-decoration:none;
		padding:0 1em;
		border-right:1px solid rgba(0, 0, 0, 0.1);
		vertical-align:middle
		transition:all 0.15s ease;
		
		&:hover {
			background:brandcolor;
			color:white;
			box-shadow:
				inset 0 -2px 1px rgba(0, 0, 0, 0.2),
				0 2px 10px -1px rgba(0, 0, 0, 0.3);

			img {
				filter:invert(1);
			}
		}
		
		&:active {
			background:darken(brandcolor, 10);
			color:rgba(255, 255, 255, 0.7);
			box-shadow:
				inset 0 1px 10px rgba(0, 0, 0, 0.3);
			transition:none;

			img {
				filter:invert(1);
				opacity:0.33;
				transition:none;
			}
		}
	}
	
	img {
		height:1.2em;
		vertical-align:middle;
		opacity:0.5;
		margin-top:-0.1em;
		margin-left:0.8em;
		transition:filter 0.2s ease;
	}
	
	+bp(1) {
		margin-right:0;
		
		a {
			padding:0 1.5em;
		}
	}
}