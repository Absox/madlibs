.no-script-message {
	position:fixed;
	z-index:1001;
	top:0;
	left:0;
	right:0;
	bottom:0;
	padding:1em;
	background:rgba(0, 0, 0, 0.8);
	display:flex;
	align-items: center
	text-align:center;
    justify-value: center;
    color:white;
    font-size:2em;
    font-weight:bold;
    box-shadow:inset 0 40px 250px rgba(0, 0, 0, 0.5);
    text-shadow:
    	0 -2px green,
    	2px 2px red,
     	-2px 2px blue,
     	0 0 1em rgba(0, 0, 0, 1);
}