form {
	label {
		display:block;
	}
	
	input[type="text"],
	input[type="password"] {
		display:block;
		margin:0.5em 0;
		border:1px solid rgba(0, 0, 0, 0.2);
		padding:0.5em 0.6em;
		background:white;
	}
	
	input[type="submit"] {
		background:brandcolor;
		color:white;
		margin-right:0.8em;
		margin-top:0.4em;
		
		border:none
		padding:0.5em 1em 0.7em;
		
		box-shadow:
			inset 0 -2px 1px rgba(0, 0, 0, 0.2),
			0 2px 10px -1px rgba(0, 0, 0, 0.3);
		
		&:active {
			background:darken(brandcolor, 8);
			box-shadow:none;
			color:mix(brandcolor, white, 50);
		}
	}
	
	.message {
		color:desaturate(mix(black, red, 20), 30);
	}
}