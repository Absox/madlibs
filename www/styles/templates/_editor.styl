@import "../../node_modules/medium-editor/dist/css/medium-editor.min.css";
@import "../../node_modules/medium-editor/dist/css/themes/Beagle.css";

.template-editor-wrapper {
	max-width:60em;
	width:100%;
	padding:3em 0;
	
	margin:0 auto;
	text-align:center;
}

.template-editor-form {
	padding-bottom:2em;
	border-bottom:1px solid rgba(0, 0, 0, 0.2);
}

.template-editor {
	background:white;
	border-radius:0.5em;
	box-shadow:0 4px 10px -3px rgba(0, 0, 0, 0.15);
	overflow:hidden;
	font-size:1.2em;
	margin-top:1.5em;
	margin-bottom:1.5em;
	text-align:left;
	
	&__title {
		padding:1.75em 2em;
		box-sizing:border-box;
		width:100%;
		border:none;
		margin:0;
		background:none;
		
		&:focus {
			outline:none;
		}
	}
	
	&__separator {
		margin:0 2em;
		border-top:1px solid rgba(0, 0, 0, 0.1);
	}
	
	&__content {
		padding:0em 2em;
		margin:0;
		min-height:400px;
		border:none;
		width:100%;
		box-sizing:border-box;
		border-bottom:3px solid uicolor;
		
		h2 {
			font-family:fancy-font-family;
			margin:2rem 0;
		}

		p {
			margin:2rem 0;
		}
		
		span {
			background:uicolor;
		}

		&:focus {
			outline:none;
		}
	}
}

.medium-editor-action-h1 {
	font-family:fancy-font-family;
}