form {
	font-family:base-font-family;
	
	label {
		display:block;
	}
	
	.message {
		color:desaturate(mix(black, red, 20), 30);
	}
}
	
[type="text"],
[type="password"],
select,
textarea {
	display:block;
	margin:0.5em 0;
	border:1px solid rgba(0, 0, 0, 0.2);
	padding:0.5em 0.6em;
	background:white;
}

[type="submit"] {
	background:brandcolor;
	color:white;
	margin-right:0.8em;
	font-weight:900;
	border:none
	padding:0.5em 1em 0.6em;
	margin-top:0.4em;
	
	box-shadow:
		inset 0 -2px 1px rgba(0, 0, 0, 0.2),
		0 2px 10px -1px rgba(0, 0, 0, 0.3);
	
	&:active {
		background:darken(brandcolor, 8);
		box-shadow:
			inset 0 0 6px rgba(0, 0, 0, 0.2);
		outline:none;
		color:mix(brandcolor, white, 50);
	}
}

[type="checkbox"] {
	appearance:none;
	margin-right:0.5em;
	border:2px solid rgba(0, 0, 0, 0.2);
	background:white;
	height:0.8em;
	width:0.8em;
	margin-left:1em;
	border-radius:4px;
	
	&:checked {
		background:brandcolor;
		border:3px double white;
	}
	
	&:active {
		transform:scale(0.9);
		outline:none;
	}
}