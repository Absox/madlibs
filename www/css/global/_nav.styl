.site-nav {
	display:block;
	line-height:header_height
	border-left:1px solid uicolor;
	margin-left:1em;
	margin-right:-1.5em;
	float:right;
	
	ul, li {
		float:left;
		list-style:none;
		margin:0;
		padding:0;
		display:block;
	}

	a {
		color:rgba(0, 0, 0, 0.5);
		display:block;
		text-decoration:none;
		padding:0 1em;
		border-right:1px solid uicolor;
		vertical-align:middle
		
		&:hover {
			background:brandcolor;
			box-shadow:
				inset 0 -2px 1px rgba(0, 0, 0, 0.2),
				0 2px 10px -1px rgba(0, 0, 0, 0.3);
		}
		
		&:active {
			background:darken(brandcolor, 8);
			box-shadow:
				inset 0 0 6px rgba(0, 0, 0, 0.2);
		}
	}
	
	img {
		height:1.2em;
		vertical-align:middle;
		opacity:0.4;
		margin-top:-0.1em;
	}
	
	+bp(1) {
		margin-right:0;
		
		a {
			padding:0 1.5em;
		}
	}
}