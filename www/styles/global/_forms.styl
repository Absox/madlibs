form {
	font-family:base-font-family;
	margin-bottom:1.5em;
	
	label {
		display:block;
	}
	
	.message {
		color:desaturate(mix(black, red, 20), 30);
	}
}
	
[type="text"],
[type="password"],
select,
textarea {
	display:block;
	margin:0.5em 0;
	border:1px solid rgba(0, 0, 0, 0.2);
	padding:0.5em 0.6em;
	background:white;
}

[type="submit"] {
	@extend .button;
	margin-right:0.5em;
}

[type="checkbox"] {
	appearance:none;
	margin-right:0.5em;
	border:2px solid rgba(0, 0, 0, 0.2);
	background:white;
	height:0.8em;
	width:0.8em;
	margin-left:1em;
	border-radius:4px;
	
	&:checked {
		background:brandcolor;
		border:3px double white;
	}
	
	&:active {
		transform:scale(0.9);
		outline:none;
	}
}