.button {
	background:brandcolor;
	color:white;
	font-weight:900;
	border:none
	padding:0.5em 1em 0.6em;
	
	box-shadow:
		inset 0 -2px 1px rgba(0, 0, 0, 0.2),
		0 2px 10px -1px rgba(0, 0, 0, 0.3);
	
	&:active {
		box-shadow:
			inset 0 0 6px rgba(0, 0, 0, 0.2),
			inset 0 0 100px rgba(0, 0, 0, 0.2);
		color:rgba(255, 255, 255, 0.6);
		outline:none;
	}
}

.warning-button {
	@extend .button;
	
	background:#DB4159;
}