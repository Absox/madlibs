.template-list-wrapper {
	@extend .site-content__standard-wrapper;
}

.create-template-button {
	@extend .button;
	margin-bottom:1.5em;
	
	+bp(1) {
		float:right;
		margin-top:1.5em;
	}
}

.template-list-title {
	
	+bp(1) {
		float:left;
	}
}

.template-list {
	list-style:none;
	margin:0;
	padding:0;
	clear:both;
	border-top:2px solid rgba(0, 0, 0, 0.2);
	
	&__link {
		display:block;
		
		margin-bottom:1px;
		padding:1em 1.5em;
		text-decoration:none;
		position:relative;
		font-weight:bold;
		font-size:1.1em;
		border-bottom:1px solid rgba(0, 0, 0, 0.2);
		
		&:hover {
			background:white;
		}
		
		&:empty {
			font-style:italic;
			
			&:before {
				content:"No title specified";
			}
		}
		
		&:active {
			opacity:0.75;
			position:static;
		}
	}
}

