Mad Libs API Specification

--- COOKIES ---

loggedInUser = Username of current logged in user
// FUTURE
authToken = Authentication token

--- RESTFUL ---

User Login:
    Method: POST
    Path: /madlibs/api/login
    Request Content:
        {
            "user" : <username>
            "password" : <password>
        }
    Response Cases:
        Successful Login:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "user" : <username>
                }
            Additional:
                Sets loggedInUser cookie.
        Failure - User Not Found:
            Code: 200 OK
                {
                    "status" : "failure",
                    "why": "User not found"
                }
        Failure - Incorrect Password:
            Code: 200 OK
                {
                    "status" : "failure",
                    "why" : "Invalid password"
                }

User Registration:
    Method: POST
    Path: /madlibs/api/register
    Request Content:
        {
            "user" : <username>,
            "password" : <password>,
        }
    Response Cases:
        Successful Registration:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "user" : <username>
                }
            Additional:
                Logs user in.
        Failure - Username Taken:
            Code: 200 OK
                {
                    "status" : "failure",
                    "why" : "Username taken"
                }

Create Template:
    Method: POST
    Path: /madlibs/api/template/
    Request Content:
        // Username pulled from cookies.
        {
        }
    Response Cases:
        Success:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "id" : <id> // uuid of template
                }
        Failure - User Does Not Exist/Not Logged In:
            Code: 401 UNAUTHORIZED
            Content:
                {
                    "status" : "failure",
                    "why" : "User does not exist/Not logged in"
                }


Get List of Templates For User:
    Method: GET
    Path: /madlibs/api/template/user/<username>
    Response Cases:
        Success:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "id" : [ids of templates]
                }
        Failure - User Not Found:
            Code: 404 NOT FOUND
            Content:
                {
                    "status" : "failure",
                    "why" : "User not found"
                }

Get Template Body:
    Method: GET
    Path: /madlibs/api/template/<id>
    Response Cases:
        Success:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "title" : <title>,
                    "creator" : <creator>,
                    "rating" : <rating>,
                    "comments" : [comments],
                    "content" : <content>

                }
        Failure - Template Not Found:
            Code: 404 NOT FOUND
            Content:
                {
                    "status" : "failure",
                    "why" : "Template not found"
                }

Update Template:
    Method: PUT
    Path: /madlibs/api/template/<id>
    Request Content:
        {
            "content" : <content>
        }
    Response Cases:
        Success:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "user" : <username>,
                    "id" : <id>
                }
        Failure - User Does Not Exist/Not Logged In:
            Code: 401 UNAUTHORIZED
            Content:
                {
                    "status" : "failure",
                    "why" : "User does not exist/Not logged in"
                }
        Failure - User Does Not Own Template:
            Code: 401 UNAUTHORIZED
            Content:
                {
                    "status" : "failure",
                    "why" : "User does not own template"
                }
        Failure - Template Does Not Exist:
            Code: 404 NOT FOUND
            Content:
                {
                    "status" : "failure",
                    "why" : "Template does not exist"
                }

Delete Template:
    Method: DELETE
    Path: /madlibs/api/template/<id>
    Request Content:
        // Username pulled from cookies
        {
        }
    Response Cases:
        Success:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "user" : <username>
                }
        Failure - User Does Not Exist/Not Logged In:
            Code: 401 UNAUTHORIZED
            Content:
                {
                    "status" : "failure",
                    "why" : "User does not exist/Not logged in"
                }
        Failure - User Does Not Own Template:
            Code: 401 UNAUTHORIZED
            Content:
                {
                    "status" : "failure",
                    "why" : "User does not own template"
                }
        Failure - Template Does Not Exist:
            Content:
                {
                    "status" : "failure",
                    "why" : "Template does not exist"
                }

Check Voting Status For Template:
    Method: GET
    Path: /madlibs/api/template/<id>/vote
    // Username pulled from cookies
    Response Cases:
        Success:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "voted" : <up/down/none>
                }
        Failure - User Does Not Exist/Not Logged In:
            Code: 401 UNAUTHORIZED
            Content:
                {
                    "status" : "failure",
                    "why" : "User does not exist/Not logged in"
                }
        Failure - Template Does Not Exist:
            Code: 404 NOT FOUND
            Content:
                {
                    "status" : "failure",
                    "why" : "Template does not exist"
                }
Update Vote For Template:
    Method: POST
    Path: /madlibs/api/template/<id>/vote
    Request Content:
        {
            "vote" : <up/down/none>
        }
    Response Cases:
        Success:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "user" : <username>,
                    "id" : <id>,
                }
        Failure - User Does Not Exist/Not Logged In:
            Code: 401 UNAUTHORIZED
            Content:
                {
                    "status" : "failure",
                    "why" : "User does not exist/Not logged in"
                }
        Failure - Template Does Not Exist:
            Code: 404 NOT FOUND
            Content:
                {
                    "status" : "failure",
                    "why" : "Template does not exist"
                }

Comment on Template:
    Method: POST
    Path: /madlibs/api/template/<id>/comment
    Request Content:
        {
            "content" : <content>
        }
    Response Cases:
        Success:
            Code: 200 OK
            Content:
                {
                    "status" : "success",
                    "user" : <username>
                    "id" : <id>
                }
        Failure - User Does Not Exist/Not Logged In:
            Code: 401 UNAUTHORIZED
            Content:
                {
                    "status" : "failure",
                    "why" : "User does not exist/Not logged in"
                }

